#include<stdio.h>

int binarysearch(int arr[], int n, int key){
	int low=0, high= n-1 , mid;
	
	while(low<=high){
		mid=(low+high)/2;
		
		if (arr[mid]==key)
		return mid;
		else if (arr[mid]<key)
		 low= mid +1;
		 else 
		 high= mid-1;
		
	}
	return -1;
}

int main() {
	int n ,i, key , result;
	printf("Enter a number of students who attented the trining:");
	scanf("%d",&n);
	int rollNumbers[n];
	
	printf("Enter %d rollNumbers in sorted order:\n",n);
	for (i=0; i<n; i++){
	scanf("%d",& rollNumbers[i]);
    } 
	
	printf("Enter the rollNumbers to search:");
	scanf("%d", & key);
	
	result = binarysearch(rollNumbers, n , key);
	
	if (result != -1)
	printf("student with roll number %d attended the training program.\n", key);
	else
	printf("student with roll number %d Not attended the training program.\n", key);
	
	return 0;
}
